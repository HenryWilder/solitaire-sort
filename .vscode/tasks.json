{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solitaire Sort in C",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "src\\c\\example.c",
                "src\\c\\solitaire-sort.c",
                "-o",
                "out\\c\\solitaire-sort-c.exe"
            ],
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+): (warning|error): (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            },
            "group": "build"
        },
        {
            "label": "Test Solitaire Sort in C",
            "command": "out\\c\\solitaire-sort-c.exe",
            "group": "test"
        }
    ]
}
