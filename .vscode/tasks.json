{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Program",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "example.c",
                "solitaire-sort.c",
                "-o",
                "a.exe"
            ],
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+): (warning|error): (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            },
            "group": "build"
        },
        {
            "label": "Test Solitaire Sort",
            "command": "a.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}